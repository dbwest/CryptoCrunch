<p id="notice"><%= notice %></p>

<h1 class="main-header">Crypto Crunch</h1>

<table class="main-table">
  <thead class="table-header">
    <tr class="table-row">
      <th>Team market percent</th>
      <th>Ico date</th>
      <th>Vertical</th>
      <th>Team</th>
      <th>Team rating</th>
      <th>Needs blockchain</th>
      <th>Countries ico available</th>
      <th>Scam sale probability</th>
      <th>Smart money investors</th>
      <th>Mining difficulty</th>
      <th>Arbitrage activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-body">
    <% @currencies.each do |currency| %>
      <tr class="table-row">
        <td><%= currency.team_market_percent %></td>
        <td><%= currency.ico_date %></td>
        <td><%= currency.vertical %></td>
        <td><%= currency.team %></td>
        <td><%= currency.team_rating %></td>
        <td><%= currency.needs_blockchain %></td>
        <td><%= currency.countries_ico_available %></td>
        <td><%= currency.scam_sale_probability %></td>
        <td><%= currency.smart_money_investors %></td>
        <td><%= currency.mining_difficulty %></td>
        <td><%= currency.arbitrage_activity %></td>
        <td><%= link_to 'Show', currency %></td>
        <td><%= link_to 'Edit', edit_currency_path(currency) %></td>
        <td><%= link_to 'Destroy', currency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

